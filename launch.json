{
    "configurations": [
        {
            "name": "scrapertest",
            "type": "cloudcode.cloudrun",
            "request": "launch",
            "autoStop": false,
            "build": {
                "docker": {
                    "path": "Dockerfile"
                }
            },
            "image": "scraper",
            "service": {
                "name": "recipescraper",
                "containerPort": 8080,
                "resources": {
                    "limits": {
                        "memory": "2000Mi"
                    }
                }
            },
            "target": {
                "minikube": {}
            },
            "watch": true,
            "externalPortForward": 3000,
            "debug": {
                "sourceFileMap": {
                    "${workspaceFolder}": "/usr/src/app"
                }
            }
        }
    ]
}